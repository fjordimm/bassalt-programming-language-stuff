///// Control Keywords /////

void Main()
{
	if 3 > 9
	{
		stdout.println("lorem");
	}
	else if 7 > 4
	{
		stdout.println("ipsum");
	}
	else
	{
		stdout.println("dolor");
	}

	// Traditional 'for' loop:
	for int i = 0; i < 30; i++
	{
		stdout.println(i);
	}

	// Simplified 'for' loop:
	for int i in 0..30
	{
		stdout.println(i);
	}

	// Simplified 'for' loop with custom step:
	for int i in 0..(2)..30
	{
		stdout.println(i);
	}

	// 'for-each' loop:
	char[] arr => {'a', 'b', 'c'};
	for char c in arr
	{
		stdout.println(c);
	}

	// 'while' loop:
	int i = 0;
	while i < 30
	{
		stdout.println(i);
		i++;
	}

	// 'do-while' loop:
	int j = 0;
	do
	{
		stdout.println(i);
		j++;
	}
	while j < 30;

	// Infinite loop:
	int k = 0;
	loop
	{
		if (k >= 30) { break; }

		stdout.println(k);
		k++;
	}

	// Labelled infinite loop:
	int l = 0;
	loop:MyLoop
	{
		if l >= 30 { break MyLoop; }

		stdout.println(l);
		l++;
	}

	// Labelled 'while' loop (labels also apply to 'do-while' loops and 'for' loops):
	int m = 0;
	while:MyLoop true
	{
		if l >= 30 { break MyLoop; }

		stdout.println(l);
		l++;
	}

	// Labels also work for any block, including if-statements...
	if:MyBlock true
	{
		stdout.println("hello");
	}

	// ...and standalone curly-brace blocks
	:MyBlock
	{
		stdout.println("hi");
	}

	// Switch case:
	char ch = 'b';
	switch ch
	case 'a'
	{
		stdout.println("nice, its A");
	}
	case 'b'
	{
		stdout.println("nice, its B");
	}
	case else
	{
		stdout.println("this is the default case");
	}
}

