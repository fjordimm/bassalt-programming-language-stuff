///// Tuples /////

/* Note: you cannot access the nth element of a tuple; think of the numbers as the name of each field */

void Main()
{
	(float, char) thing = (3.7, 'e');
	thing.0 = 2.9;
	stdout.println(thing.1);

	float a0;
	char a1;
	(a0, a1) = thing;

	(float b0, char b1) = (0.1, 'x');

	float c0;
	(c0, char c1) = SomeFunc();

	(float d0, void) = SomeFunc();
}

(float, char) SomeFunc()
{
	return (9.9, 'z');
}

