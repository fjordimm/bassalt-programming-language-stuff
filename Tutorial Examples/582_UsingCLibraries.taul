///// Using Other Libraries /////

// stuff.h:
/*
	#pragma once

	int func(float a, float b);
*/

///////////

// Option #1

using extern "stuff.h";

void Main()
{
	int a = $foo(1f, 3.7f);
}

///////////

// Option #2

using extern "stuff.h"
{
	$foo: int Func(float, float);
}

void Main()
{
	int a = Foo(1f, 3.7f);
}

